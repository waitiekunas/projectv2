{
    "compilerOptions": {
        "target": "esnext",
        "module": "commonjs",
        "lib": [
            "dom",
            "es2017"
        ],
        // "allowJs": true,
        // "checkJs": true,
        "jsx": "react",
        "strict": true,
        "esModuleInterop": true,
        "experimentalDecorators": true,
        "emitDecoratorMetadata": true,
        "noEmit": true,
        "skipLibCheck": true,
        "resolveJsonModule": true,
        "types": [
            "node"
        ],
        "typeRoots": [
            "./node_modules/@types"
        ]
    },
    "include": [
        "node_modules/redux-thunk"
    ]
}